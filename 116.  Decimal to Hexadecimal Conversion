#include <iostream>
using namespace std;

int main() {
    int decimal;
    cin >> decimal;

    char hex[20];
    int i = 0;

    if(decimal == 0){
        cout << 0;
        return 0;
    }

    while(decimal != 0) {
        int rem = decimal % 16;
        if(rem < 10)
            hex[i] = rem + '0';
        else
            hex[i] = rem - 10 + 'A';
        decimal /= 16;
        i++;
    }

    // print in reverse
    for(int j = i - 1; j >= 0; j--)
        cout << hex[j];

    return 0;
}
