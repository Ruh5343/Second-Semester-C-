#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Enter the height of the pyramid: ";
    cin >> n;

    for(int i = n; i >= 1; i--) { // start from the bottom row
        // print leading spaces
        for(int j = 1; j <= n - i; j++) {
            cout << " ";
        }
        // print stars
        for(int k = 1; k <= (2*i - 1); k++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
