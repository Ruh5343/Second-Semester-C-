#include <iostream>
using namespace std;

int main() {
    int n, i;
    bool isPrime = true;
    cin >> n;
    if (n == 0 || n == 1) {
        isPrime = false;
    }
    else {
        // Check if n is divisible by any number from 2 to n/2
        //Why n/2? Because no number greater than n/2 (except n itself) can divide n evenly
        for (i = 2; i <= (n / 2); i++) {
            if (n % i == 0) {
                isPrime = false;
                break;
            }
        }
    }
    
    if (isPrime)
        {
        cout << n << " is a prime number.";
        }
    else
        {
        cout << n << " is not a prime number.";
        }

    return 0;
}
