#include <iostream>
using namespace std;

int main() {
    int decimal;
    cin >> decimal;

    int octal[32]; // array to store octal digits
    int i = 0;

    if(decimal == 0){
        cout << 0;
        return 0;
    }

    while(decimal != 0) {
        octal[i] = decimal % 8;
        decimal /= 8;
        i++;
    }

    // print in reverse
    for(int j = i - 1; j >= 0; j--)
        cout << octal[j];

    return 0;
}
