#include <iostream>
#include <cmath>
using namespace std;

int main() {
    long long binary;
    cin >> binary;

    long long decimal = 0;
    int i = 0;

    while(binary != 0) {
        int digit = binary % 10;
        if(digit != 0 && digit != 1) {
            cout << "Invalid binary number";
            return 0;
        }
        decimal += digit * pow(2, i);
        binary /= 10;
        i++;
    }

    cout << decimal;
    return 0;
}
