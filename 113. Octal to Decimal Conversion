#include <iostream>
#include <cmath>
using namespace std;

int main() {
    long long octal;
    cin >> octal;

    long long decimal = 0, i = 0;

    while(octal != 0) {
        int digit = octal % 10;
        decimal += digit * pow(8, i);
        octal /= 10;
        i++;
    }

    cout << decimal;
    return 0;
}
