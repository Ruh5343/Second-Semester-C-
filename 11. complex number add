#include <iostream>
using namespace std;

class Complex {
    public:
    int real;
    int imag;
};

int main() {
    Complex c1, c2, sum;

    cin >> c1.real >> c1.imag;
    cin >> c2.real >> c2.imag;

    sum.real = c1.real + c2.real;
    sum.imag = c1.imag + c2.imag;

    cout << "Sum = " << sum.real << " + " << sum.imag << "i" << endl;

    return 0;
}
